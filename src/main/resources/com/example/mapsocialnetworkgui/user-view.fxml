<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="403.0" prefWidth="458.0" stylesheets="@darkmode.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mapsocialnetworkgui.controller.UserController">
   <children>
      <HBox prefHeight="400.0" prefWidth="466.0">
         <children>
            <TableView fx:id="userTable" prefHeight="394.0" prefWidth="155.0" style="-fx-background-color: #212121;" styleClass="table">
              <columns>
                <TableColumn fx:id="id" prefWidth="30.0" styleClass="table" text="Id" />
                <TableColumn fx:id="name" prefWidth="115.0" styleClass="table" text="Name" />
              </columns>
            </TableView>
            <VBox prefHeight="394.0" prefWidth="310.0" spacing="3.0">
               <children>
                  <HBox prefHeight="25.0" prefWidth="456.0" spacing="3.0">
                     <children>
                        <TextField fx:id="addUserField" promptText="New user name" />
                        <Button fx:id="addUserBtn" mnemonicParsing="false" onAction="#handleAddUser" text="Add User" />
                        <Button fx:id="updateUserBtn" mnemonicParsing="false" onAction="#handleUpdateUser" text="Update User" />
                     </children>
                  </HBox>
                  <Button fx:id="friendsButton" mnemonicParsing="false" onAction="#handleFriendsWindow" text="Friends" />
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="3.0">
                     <Button fx:id="deleteUserBtn" mnemonicParsing="false" onAction="#handleDeleteUser" text="Delete User" />
                  </HBox>

               </children>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets left="3.0" right="3.0" top="3.0" />
   </padding>
</AnchorPane>
